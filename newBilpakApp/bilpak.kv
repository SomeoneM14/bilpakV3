#:kivy 2.0.0

<main_screen>:
    name:'bilpaklayout'
    color: (0.5, 0.6, 1, 1.0)   
    background_color: 0.4, 0.6, 0.8, 1
    MDScrollView:
        color: (0.5, 0.6, 1, 1.0)   
        background_color: 0.4, 0.6, 0.8, 1
        do_scroll_x: False
        BoxLayout:
            id: main_layout
            orientation: 'vertical'
            color: (0.5, 0.6, 1, 1.0)   
            background_color: 0.4, 0.6, 0.8, 1
            adaptive_height: True
            TabbedPanel:
                tab_width: self.size[0]/len(self.tab_list)
                tab_height: 130
                do_default_tab: False
                background_color: 0.4, 0.6, 0.8, 1

                TabbedPanelItem:

                    text: 'Bilpak'
                    color: (0.5, 0.6, 1, 1.0)   
                    background_color: 0.4, 0.6, 0.8, 1  
                    ##
                    GridLayout:
                        cols:2
                        

                TabbedPanelItem:
                    text: 'Bilpak Admin Tools'
                    
                    color: (0.5, 0.6, 1, 1.0)   
                    background_color: 0.4, 0.6, 0.8, 1
                    MDExpansionPanel:
                        id: panel
                        pos_hint: {"center_x": .5, "center_y": .5}

                        MDExpansionPanelHeader:

                            MDListItem:

                                MDListItemSupportingText:
                                    text: "Supporting text"

                                TrailingPressedIconButton:
                                    id: chevron
                                    icon: "chevron-right"
                                    on_release: app.tap_expansion_chevron(panel, chevron)

                        MDExpansionPanelContent:
                            orientation: "vertical"
                            padding: "12dp", 0, "12dp", 0

                            MDLabel:
                                text: "Channel information"
                                adaptive_height: True
                                padding_x: "16dp"
                                padding_y: "12dp"

                            MDListItem:

                                MDListItemLeadingIcon:
                                    icon: "email"

                                MDListItemHeadlineText:
                                    text: "Email"

                                MDListItemSupportingText:
                                    text: "kivydevelopment@gmail.com"

                            MDListItem:

                                MDListItemLeadingIcon:
                                    icon: "instagram"

                                MDListItemHeadlineText:
                                    text: "Instagram"

                                MDListItemSupportingText:
                                    text: "Account"

                                MDListItemTertiaryText:
                                    text: "www.instagram.com/KivyMD"
                TabbedPanelItem:
                    text: 'Screen Control'
                    
                    color: (0.5, 0.6, 1, 1.0)   
                    background_color: 0.4, 0.6, 0.8, 1
            MDGridLayout:
                cols:2
                adaptive_height: True
                md_bg_color: app.theme_cls.primaryColor
                color: (1, 1, 1, 1.0)   
                background_color: 0.4, 0.6, 0.8, 1
                MDButton:
                    style: "filled"
                    on_release:app.scan()
                    MDButtonText:
                        text: "Scan Network"
                MDSegmentedButton:
                    color: (1,1, 1, 1.0)   
                    id: network_width_button
                    background_color: 1, 1, 1, 1
                    MDSegmentedButtonItem:
                        id: network_width_button1
                        on_active:app.change_search_width(0,self.active)
                        MDSegmentButtonLabel:
                            text: "All network"

                    MDSegmentedButtonItem:
                        id: network_width_button2
                        on_active:app.change_search_width(8,self.active)
                        MDSegmentButtonLabel:
                            text: "8"

                    MDSegmentedButtonItem:
                        id: network_width_button3
                        on_active:app.change_search_width(16,self.active)
                        MDSegmentButtonLabel:
                            text: "16"
                    MDSegmentedButtonItem:
                        id: network_width_button4
                        on_active:app.change_search_width(24,self.active)
                        MDSegmentButtonLabel:
                            text: "24"
